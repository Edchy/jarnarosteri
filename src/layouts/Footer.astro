<style define:vars={{ color, bg }}>
  h4 {
    letter-spacing: -10px;
    text-transform: uppercase;
    color: var(--color);
    font-size: clamp(15vw, 22vw + 1rem, 24vw);
    min-width: max-content;
    font-family: var(--font-primary-heading);
  }
  p {
    text-align: center;
    color: var(--color);
    position: absolute;
    left: 50%;
    bottom: max(-5.5vh, -5vmax);
    text-transform: uppercase;
    font-size: var(--size-fluid-5);
    transform: translateX(-50%);
    font-weight: bold;
    min-width: max-content;
  }
  footer {
    position: relative;
    /* margin-top: 10rem; */
    /* margin-top: 2rem; */
    height: max(30vh, 50vmin);
    display: grid;
    place-content: center;
    background-image: url("/images/andy-wang.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    background-blend-mode: luminosity;
    background-color: var(--color-dark);
    background-color: var(--bg);
    overflow: clip;
  }

  img {
    inline-size: 800px;
  }
