<script>
  document.addEventListener("DOMContentLoaded", async () => {
    const response = await fetch("../data/images.json"); // Load your images from a local JSON file or an API
    let images = await response.json();
    shuffle(images); // Shuffle the images array

    images.slice(0, 6).forEach((src, i) => {
      const img = document.getElementById(`image-${i}`) as HTMLImageElement; // Type assertion here
      img.src = src;
    });

    const articles = document.querySelectorAll(".hero-section article");
    let imageIndex = 6; // Assuming first 6 are already displayed, start from the next

    articles.forEach((article) => {
      article.addEventListener("mouseenter", () => {
        const img = article.querySelector("img");
        if (imageIndex >= images.length) {
          // Reshuffle if the index exceeds the array length
          shuffle(images);
          imageIndex = 0;
        }
        img.src = images[imageIndex++];
      });
    });
  });

  function shuffle(array) {
    for (let i = array.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [array[i], array[j]] = [array[j], array[i]]; // Swap elements
    }
  }
</script>
