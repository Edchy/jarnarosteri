<style is:global>
  h1 {
    position: absolute;
    top: -90rem;
  }
  .hero-section {
    display: grid;
    list-style: none;
    /* gap: 1rem; */
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
  }

  @media (min-width: 800px) {
    .hero-section {
      grid-template-columns: 1fr 1fr 1fr;
    }
  }
</style>

