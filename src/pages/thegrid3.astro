<style>
  section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;

    @media (min-width: 800px) {
      grid-template-columns: 1fr 1fr 1fr;
    }
  }
  div {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 22;
    /* background-color: green; */
    display: flex;
    justify-content: center;
    align-items: center;
  }
  div:hover {
  }
  div:hover img {
    opacity: 0;
  }
  div:hover a {
    opacity: 1;
  }

  img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }
  a {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* opacity: 0; */
    z-index: 10;
    transition: opacity 0.75s ease;
    padding-inline: 2rem;
  }
  h2 {
    font-family: "BeVietnamPro", system-ui, sans-serif;
    text-align: center;
    font-size: var(--font-size-fluid-3);
    font-size: var(--step-3);
    font-size: var(--step-4);
    /* background: var(--gradient-13);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent; */
  }

  article:nth-child(1) {
    color: blue;
    background-color: blue;
    & a:any-link,
    a:visited {
      color: currentColor;
      /* background: var(--gradient-1);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent; */
      &:active {
        color: yellow;
      }
    }
    & div {
      background-color: #ff8901;
      /* background-image: var(--gradient-30); */

      &:hover {
        -webkit-mask: var(--mask-edge-zig-zag-bottom);
      }
    }
  }
  article:nth-child(2) {
    color: rgb(34, 255, 0);
    background-color: rgb(67, 2, 73);
    & a:any-link,
    a:visited {
      color: currentColor;
      /* background: var(--gradient-1);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent; */
      &:active {
        color: yellow;
      }
    }
    & div {
      background-color: #ffe000;
      /* background-image: var(--gradient-30); */

      &:hover {
        -webkit-mask: var(--mask-edge-zig-zag-left);
      }
    }
  }

  div:nth-child(3) {
    background-color: #7100ff;
    background-image: var(--gradient-5);
  }
  div:nth-child(4) {
    background-color: var(--color-1);
  }
  div:nth-child(5) {
    background-color: #ff0000;
  }
  div:nth-child(6) {
    background-image: var(--gradient-30);
  }
</style>
