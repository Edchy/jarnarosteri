---
import { fade } from "astro:transitions";
import { slide } from "astro:transitions";
const { body, id, href, imageSrc, className, color, bg, hoverBg } = Astro.props;

const styles = {
  color: color,
  backgroundColor: bg,
};
---

<li class={className} style={styles}>
  <div style={{ backgroundColor: hoverBg }}>
    <img
      transition:animate={fade({ duration: "0.5s" })}
      transition:name={`card-image-${id}`}
      id={id}
      src={imageSrc}
      alt="#"
    />
    <a href={href}>
      <h2
        transition:animate={fade({ duration: ".5s" })}
        transition:name={`card-title-${id}`}
      >
        {body}
      </h2>
    </a>
  </div>
</li>

<style>
  li {
    /* animation-timing-function: var(--ease-elastic-in-out-1);
    animation-duration: 1s; */
    overflow: clip;
    overflow: hidden;

    /* border: 2px solid pink; */
  }
  /* li:focus-visible :is(div, img, a) {
    outline: 13px solid #fff;
    outline-offset: -2rem;
  } */
  li:focus-within img,
  li:hover img {
    opacity: 0;
  }

  /* li:focus-within :is(img),
  li:hover a {
    opacity: 1;
  } */
  li:focus-within a,
  li:hover a {
    opacity: 1;
  }
  li div {
    position: relative;
    /* width: 100%; */
    height: 100%;
    z-index: 22;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    /* filter: contrast(140%) brightness(100%) saturate(130%) sepia(5%)
      hue-rotate(0deg); */
    /* filter: grayscale(100%) contrast(140%); */
  }
  a {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    opacity: 0;
    z-index: 10;
    /* padding-inline: 2rem; */
  }
  a:is(:any-link, :visited, :active) {
    color: currentColor;
    text-decoration: none;
    /* text-transform: uppercase; */
  }
  a:any-link,
  a:visited,
  a:active {
  }

  h2 {
    /* font-family: "BeVietnamPro", system-ui, sans-serif; */
    text-align: center;
    font-size: var(--step-3);
    line-height: 1;
  }
</style>
