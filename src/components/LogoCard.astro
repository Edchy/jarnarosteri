---
import { fade } from "astro:transitions";
import { slide } from "astro:transitions";

interface Props {
  color: string;

  hoverBg: string;
}

const { color, hoverBg } = Astro.props;
---

<li class="logo-card">
  <img
    src="/images/logos/Logga-Trans.png"
    alt="Brand Logo, a circle with the company name and a coffee bean"
  />
</li>

<style define:vars={{ color, hoverBg }}>
  li {
    background-color: var(--hoverBg);
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 22;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  img {
    position: absolute;
    top: 0;
    width: 75%;
    height: 100%;
    object-fit: scale-down;
    @media (min-width: 500px) {
      /* object-position: top; */
    }
    /* filter: contrast(140%) brightness(100%) saturate(130%) sepia(5%)
      hue-rotate(0deg); */
    /* filter: grayscale(100%) contrast(140%); */
  }
</style>
